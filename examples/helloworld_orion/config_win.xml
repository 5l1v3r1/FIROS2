<?xml version="1.0"?>
<is>
    <participant name="ros2">
        <attributes>
            <domain>0</domain>
        </attributes>

        <subscriber name="ros2_subscriber">
            <attributes>
				<domain>0</domain>
				<topic>chatter</topic>
				<type>std_msgs::msg::dds_::String_</type>
	            <partition>rt</partition>
            </attributes>
        </subscriber>
    </participant>

    <bridge name="ngsiv2">
        <library>C:\dev\ros2\install\Lib\isbridgengsiv2lib.dll</library> <!-- Path to the NGSIv2 library -->

        <publisher name="ngsiv2_publisher">
            <property>
                <name>host</name>
                <value>localhost</value>
            </property>
            <property>
                <name>port</name>
                <value>1026</value>
            </property>
        </publisher>
    </bridge>

    <connector name="domain_change"> 
        <subscriber participant_name="ros2" subscriber_name="ros2_subscriber"/>
        <publisher participant_name="ngsiv2" publisher_name="ngsiv2_publisher"/>
        <transformation file="C:\dev\ros2\src\ros2\firos2\examples\helloworld_orion\build\Release\userlib.dll" function="transform"/>
    </connector>
</is>
